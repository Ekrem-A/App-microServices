{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1434;Database=catalogdb;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True"
  },
  "Redis": {
    "Configuration": "localhost:6379",
    "InstanceName": "CatalogCache_",
    "Enabled": false
  },
  "Kafka": {
    "BootstrapServers": "localhost:29092",
    "GroupId": "catalog-api-group",
    "AutoOffsetReset": "Earliest",
    "EnableAutoCommit": true
  },
  "ApiKeySettings": {
    "Enabled": false,
    "HeaderName": "X-API-Key",
    "ValidKeys": []
  },
  "RateLimitSettings": {
    "Enabled": false,
    "MaxRequestsPerWindow": 1000,
    "WindowSeconds": 60
  },
  "CorsSettings": {
    "AllowedOrigins": []
  },
  "HealthCheck": {
    "SqlServer": {
      "Enabled": true,
      "Host": "localhost",
      "Port": 1434
    }
  },
  "Docker": {
    "SqlServer": {
      "Image": "mcr.microsoft.com/mssql/server:2022-latest",
      "ContainerName": "sqlserver",
      "PortMapping": "1434:1433",
      "Environment": {
        "SA_PASSWORD": "YourStrong@Passw0rd",
        "ACCEPT_EULA": "Y",
        "MSSQL_PID": "Express"
      }
    }
  }
}

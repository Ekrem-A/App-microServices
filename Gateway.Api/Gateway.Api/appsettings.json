{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Yarp": "Information",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",

  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317"
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173"
    ]
  },

  "ReverseProxy": {
    "Routes": {
      "catalog-route": {
        "ClusterId": "catalog",
        "Match": {
          "Path": "/catalog/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/catalog" }
        ]
      },
      "identity-route": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/identity" }
        ]
      },
      "order-route": {
        "ClusterId": "order",
        "Match": {
          "Path": "/order/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/order" }
        ]
      },
      "payment-route": {
        "ClusterId": "payment",
        "Match": {
          "Path": "/payment/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/payment" }
        ]
      },
      "cart-route": {
        "ClusterId": "cart",
        "Match": {
          "Path": "/cart/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/cart" }
        ]
      }
    },
    "Clusters": {
      "catalog": {
        "Destinations": {
          "default": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "identity": {
        "Destinations": {
          "default": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "order": {
        "Destinations": {
          "default": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "payment": {
        "Destinations": {
          "default": {
            "Address": "http://localhost:5004"
          }
        }
      },
      "cart": {
        "Destinations": {
          "default": {
            "Address": "http://localhost:5005"
          }
        }
      }
    }
  }
}
